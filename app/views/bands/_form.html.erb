<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :put : :post) %>
<% heading = (band.persisted? ?  "Edit a band" : "Create a band") %>
<% button_text = (band.persisted? ? "Update band" : "Create band") %>
<%= flash[:notice].nil? ? nil : flash[:notice] %>

<h1><%= heading %></h1>
<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label>
    Band Name:
    <input type="text" name="band[name]" value="<%= band.name %>">
  </label>
  <br>

  <input type="submit" value="<%= button_text %>">
</form>